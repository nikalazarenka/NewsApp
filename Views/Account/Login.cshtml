@model LoginViewModel

<div>
    <h1 class="lng-logintitle">Login to personal account</h1>
    <form class="form-group" asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-all-route-returnUrl="@ViewBag.returnUrl">
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="UserName" class="lng-name">User Name</label>
            <br />
            <input asp-for="UserName" />
            <span asp-validation-for="UserName"></span>
        </div>
        <div>
            <label asp-for="Password" class="lng-password">Password</label>
            <br />
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <br />
            <input type="submit" class="lng-login" value="Login" />
        </div>
    </form>
</div>

<script src="~/js/lang.js"></script>
<script src="~/js/site.js"></script>