@model News

<div class="col-lg-4">
    <h2 align="center">@Model.Title</h2>
    <img height="500" width="500"
         class="img-thumbnail"
         src="data:image/jpeg; base64, @Model.ImageData"
         style="min-height:400px; min-width:356px; margin-bottom:4px;" />
    <h3>@Model.Subtitle</h3>
    <p><a class="btn btn-warning lng-more" asp-controller="More" asp-route-id="@Model.Id">More</a></p>
</div>

<script src="~/js/lang.js"></script>
<script src="~/js/site.js"></script>